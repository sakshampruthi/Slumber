<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sleep.NapActivity">

    <include layout="@layout/toolbar_main"
        android:id="@+id/toolEven"/>
<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/toolEven">-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolEven"
            android:layout_marginTop="20dp"
            android:paddingBottom="40dp">
            <TextView
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateSetEven"
                android:clickable="true"
                android:focusable="true"
                android:text="xx-xx-xxxx"
                android:layout_centerHorizontal="true"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nap Details"
                android:layout_below="@id/dateSetEven"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:id="@+id/napText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:baselineAligned="false"
                android:id="@+id/ans1Even"
                android:layout_below="@id/napText">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="When did you go to your bed to sleep"
                    android:textSize="18sp"
                    android:ems="12"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:text=":"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ans1EvenTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_stopwatch"
                    android:drawablePadding="5dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="00:00"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"

            android:id="@+id/ans2Even"
            android:layout_below="@id/ans1Even">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approx what time you slept"
                android:textSize="18sp"
                android:ems="12"
                android:textColor="@color/textcolor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text=":"
                android:textColor="@color/textcolor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ans2EvenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_stopwatch"
                android:drawablePadding="5dp"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="00:00"
                android:textColor="@color/textcolor"
                android:textSize="20sp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:id="@+id/ans3Even"
                android:layout_below="@id/ans2Even">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:text="What approx time you got up"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text=":"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ans3EvenTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_stopwatch"
                    android:drawablePadding="5dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="00:00"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/submitNap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:text="Add Entry" />

        </RelativeLayout>
<!--    </ScrollView>-->
</RelativeLayout>